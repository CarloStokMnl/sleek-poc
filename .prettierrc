{
    "singleQuote": true,
    "trailingComma": "all",
    "jsxSingleQuote": false,
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "overrides": [
        {
            "files": [
                "/src/sass/modules",
                "/src/sass/components",
                "/modules"
            ],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": [
                "**/*.scss",
                "**/*.sass"
            ],
            "options": {
                "printWidth": 120
            }
        }
    ]
}